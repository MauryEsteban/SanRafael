@model IEnumerable<SanRafael.Models.Asignatura>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista</h2>
<h4>Asignaturas</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_asignatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre_asignatura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado_eliminado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_asignatura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_asignatura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado_eliminado)
        </td>
        <td>            
            @Html.ActionLink("Ver", "Details", new { id = item.id_asignatura }) |
            @Html.ActionLink("Editar", "Edit", new { id=item.id_asignatura }) |
            @if (item.estado_eliminado)
            {
                @Html.ActionLink("Habilitar", "Restore", new { id = item.id_asignatura })
            }
            else
            {
                @Html.ActionLink("Deshabilitar", "Delete", new { id = item.id_asignatura })
            }
            
        </td>
    </tr>
}

</table>
